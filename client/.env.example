# Transition DJ Frontend 환경 변수
# 이 파일을 .env.local로 복사하여 사용

# ===== Backend API 설정 =====
# Mock 모드 (true: Mock 사용, false: 실제 Backend 연결)
NEXT_PUBLIC_USE_MOCK=true

# Stem Separation API (Demucs Backend)
NEXT_PUBLIC_STEM_API_URL=http://localhost:8000/api/stems

# Transition DJ API (BeatNet/Madmom Backend)
NEXT_PUBLIC_TRANSITION_API_URL=http://localhost:8000/api/transition

# Backend Health Check URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# ===== SoundCloud API =====
# SoundCloud Client ID (https://developers.soundcloud.com 에서 발급)
NEXT_PUBLIC_SOUNDCLOUD_CLIENT_ID=demo

# ===== 기타 설정 =====
# 개발 모드 디버그 로깅
NEXT_PUBLIC_DEBUG=true
